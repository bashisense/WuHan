%!CairoScript
<< /content //COLOR /width 40 /height 40 >> surface context
//COLOR [0 0 40 40] record
dup /s8 exch def dup context
1 0 0 rgb set-source
paint
1 g set-source
//ALPHA [0 0 40 40] record
dup /s10 exch def dup context
1 g set-source
paint
n 0 0 m 40 40 l
//CLEAR set-operator
10 set-line-width
stroke+
pop pattern
  mask
pop pattern
  set-source
paint
pop
/s8 undef
/s10 undef
